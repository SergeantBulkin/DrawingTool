<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrawingTool" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/bottom_bar_night</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DrawingViewStyle">
        <item name="android:background">@color/gray_800</item>
    </style>

    <style name="FluidSliderStyle">
        <item name="bubble_color">@color/gray_800</item>
        <item name="bar_color">@color/white</item>
        <item name="bubble_text_color">@color/white</item>
    </style>

    <style name="BrushSizeDialogButtonsStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>